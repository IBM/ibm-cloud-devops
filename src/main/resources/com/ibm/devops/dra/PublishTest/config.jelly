<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:c="/lib/credentials" xmlns:f="/lib/form">
    <!--
      This jelly script is used for per-project configuration.
    -->

    <f:entry title="IBM Cloud API Key" field="credentialsId">
        <c:select/>
    </f:entry>

    <f:validateButton title="Test Connection" progress="Testing..." method="testConnection" with="credentialsId,orgName" />

    <f:entry title="Toolchain Id" field="toolchainName">
        <f:textbox/>
    </f:entry>

    <f:entry title="Build job name" field="buildJobName">
        <f:textbox />
    </f:entry>
    <f:entry title="Application name" field="applicationName">
        <f:textbox />
    </f:entry>

    <f:entry title="Environment" field="environment">
        <table>
            <f:radioBlock name="testEnv" title="Build environment" checked="${instance.getTestEnv().isBuild()}" value="build">
            </f:radioBlock>

            <f:radioBlock name="testEnv" title="Deploy environment" checked="${instance.getTestEnv().isDeploy()}" value="deploy">
                <f:entry title="Environment name" field="envName">
                    <f:textbox></f:textbox>
                </f:entry>
            </f:radioBlock>
        </table>
    </f:entry>

    <f:entry title="Metric Type" field="lifecycleStage">
        <f:select>
        </f:select>
    </f:entry>

    <f:entry title="Result file location" field="contents">
        <f:textbox />
    </f:entry>

    <f:optionalBlock field="additionalUpload" name="additionalUpload" title="Upload another file" checked="${instance.additionalContents != null}">
        <f:entry title="Additional Type of Metric (Optional)" field="additionalLifecycleStage">
            <f:select>
            </f:select>
        </f:entry>

        <f:entry title="Additional Result File Location (Optional)" field="additionalContents">
            <f:textbox />
        </f:entry>
    </f:optionalBlock>

    <f:optionalBlock field="additionalBuildInfo" name="additionalBuildInfo" title="Select this check box if you want to set your own build number." checked="${instance.buildNumber != null}">
        <f:entry title="Build number" field="buildNumber">
            <f:textbox />
        </f:entry>
    </f:optionalBlock>

    <f:optionalBlock name="additionalGate" title="Evaluate gate policy" checked="${instance.policyName != null}">
        <f:entry title="Policy name" field="policyName">
            <f:select />
        </f:entry>
        <f:entry title="Fail the build based on the policy rules" field="willDisrupt">
            <f:checkbox></f:checkbox>
        </f:entry>
    </f:optionalBlock>

</j:jelly>


